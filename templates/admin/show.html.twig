{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ app.user.password }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ app.user.DateNaissance ? app.user.DateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Numtel</th>
                <td>{{ app.user.Numtel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_showAll') }}">back to list</a>

    <a href="{{ path('app_admin_editClient', {'id': app.user.id}) }}">edit</a>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
