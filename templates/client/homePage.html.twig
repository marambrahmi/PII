{% extends 'base.html.twig' %}

{% block title %}Acoount{% endblock %}

{% block body %}
    <h1>Your account</h1>

    <table class="table" border=1>
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ app.user.password }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ app.user.DateNaissance ? app.user.DateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Numtel</th>
                <td>{{ app.user.Numtel }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_account_edit', {id: app.user.id}) }}">Edit Account</a>
    <a href="{{ path('app_account_delete', {id: app.user.id}) }}">Delete Account</a>
{% endblock %}
