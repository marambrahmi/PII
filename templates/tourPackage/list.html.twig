{% for label, messages in app.flashes %}
    <div class="alert alert-{{ label }}">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endfor %}

<h1>Tour Package List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th> 
            <th>Prix</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for tourPackage in tourPackages %}
            <tr>
                <td>{{ tourPackage.id }}</td>
                <td>{{ tourPackage.nom }}</td> 
                <td>{{ tourPackage.description }}</td>
                <td>{{ tourPackage.prix }}</td> <!-- Corrected the closing tag here -->
                <td>
                    <a href="{{ path('reserve_tourpackage', {id: tourPackage.id}) }}" class="btn btn-primary">Reserve</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
